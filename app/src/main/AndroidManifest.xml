<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.hospital.registerplatform">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RegisterPlatform"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.component.login.ResetPwdActivity"></activity>
        <activity android:name=".ui.component.recipe.RecipeListActivity" />
        <activity android:name=".ui.component.recipe.RecipeListEditActivity" />
        <activity android:name=".ui.component.recipe.RecipeDetailActivity" />
        <activity android:name=".ui.component.recipe.EditRecipeAbstractActivity" />
        <activity android:name=".ui.component.recipe.RecipeDetailEditListActivity" />
        <activity android:name=".ui.component.recipe.EditRecipeDetailActivity" />
        <activity android:name=".ui.component.register.ScheduleResultActivity" />
        <activity android:name=".ui.component.login.UploadInfoActivity" />
        <activity android:name=".ui.component.login.NewUserActivity" />
        <activity android:name=".ui.component.register.RegisterScheduleActivity" />
        <activity android:name=".ui.component.register.RegisterListActivity" />
        <activity android:name=".ui.component.hospital.DoctorDetailActivity" />
        <activity android:name=".ui.component.hospital.DoctorListActivity" />
        <activity
            android:name=".ui.component.main.MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.component.hospital.HospitalListActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ui.component.hospital.HospitalDetailActivity" />
        <activity android:name=".ui.component.comment.SubmitCommentActivity" />
        <activity android:name=".ui.component.hospital.DepartmentListActivity" />
        <activity android:name=".ui.component.login.LoginActivity" />
    </application>

</manifest>