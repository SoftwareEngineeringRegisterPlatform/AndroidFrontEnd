<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.hospital.registerplatform">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RegisterPlatform"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.component.hospital.DoctorDetailActivity"/>
        <activity android:name=".ui.component.hospital.DoctorListActivity" />
        <activity
            android:name=".ui.component.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.component.hospital.HospitalListActivity" />
        <activity android:name=".ui.component.hospital.HospitalDetailActivity" />
        <activity android:name=".ui.component.comment.SubmitCommentActivity" />
        <activity android:name=".ui.component.hospital.DepartmentListActivity" />
        <activity android:name=".ui.component.login.LoginActivity" />
    </application>

</manifest>
